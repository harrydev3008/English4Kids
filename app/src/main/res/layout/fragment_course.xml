<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent_container"
    android:layout_height="match_parent"
    tools:context=".ui.home.CourseFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/bg_border_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_4sdp">

        <ImageView
            android:id="@+id/btn_homepage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_round_arrow_back_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@string/mode_learning"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_courses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="@dimen/_24sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_6sdp"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="397\nChương đã học"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/light_black"
                android:drawableStart="@drawable/ic_book_open_text"
                android:background="@drawable/bg_word_border_selected_image_blue"
                android:paddingStart="@dimen/_6sdp"
                android:drawablePadding="@dimen/_6sdp"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:paddingVertical="@dimen/_12sdp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3979999\nTổng KN"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/light_black"
                android:layout_marginStart="@dimen/_6sdp"
                android:drawableStart="@drawable/ic_target_arrow_filled"
                android:background="@drawable/bg_word_border_selected_green"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/_6sdp"
                android:drawablePadding="@dimen/_6sdp"
                android:paddingVertical="@dimen/_12sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_6sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0\nSố lần thi đấu"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:drawableStart="@drawable/ic_sword_fight"
            android:textColor="@color/light_black"
            android:background="@drawable/bg_word_border_selected_red"
            android:paddingStart="@dimen/_6sdp"
            android:drawablePadding="@dimen/_6sdp"
            android:paddingVertical="@dimen/_12sdp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0\nSố lần thắng"
            android:textSize="@dimen/_14ssp"
            android:layout_marginStart="@dimen/_6sdp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:textColor="@color/light_black"
            android:drawableStart="@drawable/ic_trophy"
            android:background="@drawable/bg_word_border_selected_yellow"
            android:paddingStart="@dimen/_6sdp"
            android:drawablePadding="@dimen/_6sdp"
            android:paddingVertical="@dimen/_12sdp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>