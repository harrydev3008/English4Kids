<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_12sdp"
    app:strokeColor="@color/light_blue_gray"
    app:strokeWidth="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_12sdp">

        <LinearLayout
            android:id="@+id/coin_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_current_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_vietnam_bold"
                android:includeFontPadding="false"
                android:text="@string/you_are_having_pattern"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_17ssp" />

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_coin_reward"
                android:layout_marginStart="@dimen/_4sdp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/be_vietnam_bold"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/out_of_life_desc"
            android:textAlignment="center"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_16ssp" />

        <LinearLayout
            android:id="@+id/btn_purchase_full_life"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/bg_word_border"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_12sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_heart_fill"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/be_vietnam_bold"
                android:includeFontPadding="false"
                android:text="@string/restore_full_life"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_16ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_coin_reward" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_bold"
                    android:includeFontPadding="false"
                    android:text="600"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_17ssp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_purchase_three_life"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/bg_word_border"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_12sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_heart_fill"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/be_vietnam_bold"
                android:includeFontPadding="false"
                android:text="@string/restore_3_life"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_16ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_coin_reward" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_bold"
                    android:includeFontPadding="false"
                    android:text="300"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_17ssp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:drawablePadding="@dimen/_4sdp"
            android:fontFamily="@font/be_vietnam_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/no_thanks"
            android:textColor="@color/classic"
            android:textSize="@dimen/_18ssp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>