<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.play_screen.gameplay.multiple_choice.MatchMakingFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:src="@drawable/bg_competitive"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_round_arrow_back_24"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/transparent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_competitive_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_component_now"
        android:textSize="@dimen/_18ssp"
        android:layout_below="@id/imv_background"
        android:textColor="@color/light_black"
        android:fontFamily="@font/be_vietnam_bold"
        android:includeFontPadding="false"
        android:paddingHorizontal="@dimen/_8sdp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_find_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_marginBottom="19dp"
        android:backgroundTint="@color/competitive"
        android:fontFamily="@font/be_vietnam_bold"
        android:includeFontPadding="false"
        android:paddingVertical="@dimen/_8sdp"
        android:text="@string/start_course"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:cornerRadius="@dimen/_10sdp" />

</RelativeLayout>