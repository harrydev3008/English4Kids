<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.SettingFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/bg_border_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="@dimen/_4sdp">

        <ImageView
            android:id="@+id/btn_homepage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_round_arrow_back_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@string/user_profile_and_setting"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/btn_setting_notification"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_round_settings"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:layout_below="@+id/linearLayout"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cimv_user_pfp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@mipmap/app_icon"
            app:civ_border_color="@color/daily"
            app:civ_border_width="@dimen/_2sdp" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/bg_word_border"
        android:fontFamily="@font/roboto_bold"
        android:includeFontPadding="false"
        android:paddingVertical="@dimen/_12sdp"
        android:layout_below="@+id/layout_above"
        android:text="@string/edit_profile"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/classic"
        android:textSize="@dimen/_16ssp"/>

<!--    <TextView-->
<!--        android:id="@+id/btn_setting_notification"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginHorizontal="@dimen/_8sdp"-->
<!--        android:background="@drawable/bg_word_border"-->
<!--        android:fontFamily="@font/roboto_bold"-->
<!--        android:includeFontPadding="false"-->
<!--        android:paddingVertical="@dimen/_12sdp"-->
<!--        android:layout_below="@+id/btn_edit_profile"-->
<!--        android:text="@string/notification_setting"-->
<!--        android:textAlignment="center"-->
<!--        android:textAllCaps="true"-->
<!--        android:textColor="@color/classic"-->
<!--        android:textSize="@dimen/_16ssp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_logout"
        android:layout_below="@+id/btn_edit_profile"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingVertical="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statistic"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:textColor="@color/light_black"
            android:layout_marginBottom="@dimen/_4sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_word_border_selected_image_blue"
                android:drawableStart="@drawable/ic_book_open_text"
                android:drawablePadding="@dimen/_6sdp"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_6sdp"
                android:text="397\nChương đã học"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_word_border_selected_green"
                android:drawableStart="@drawable/ic_target_arrow_filled"
                android:drawablePadding="@dimen/_6sdp"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_6sdp"
                android:text="3979999\nTổng điểm"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/achievement"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:textColor="@color/light_black"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_4sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_word_border_selected_red"
                android:drawableStart="@drawable/ic_sword_fight"
                android:drawablePadding="@dimen/_6sdp"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_6sdp"
                android:text="0\nLần thi đấu"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_word_border_selected_yellow"
                android:drawableStart="@drawable/ic_trophy"
                android:drawablePadding="@dimen/_6sdp"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_6sdp"
                android:text="0\nLần thắng"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/bg_word_border_selected_red"
        android:fontFamily="@font/roboto_bold"
        android:includeFontPadding="false"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/logout"
        android:textAlignment="center"
        android:textColor="@color/text_incorrect"
        android:textSize="@dimen/_18ssp" />

</RelativeLayout>