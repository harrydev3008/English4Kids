<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/daily_parent_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/darker_green"
    app:strokeWidth="1.75dp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 6"
            android:fontFamily="@font/kavoon"
            android:textStyle="bold"
            android:paddingVertical="@dimen/_4sdp"
            android:background="@color/darker_green"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

        <LinearLayout
            android:id="@+id/body_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_daily_reward_card"
            android:paddingVertical="@dimen/_6sdp">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_coin_reward"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_2sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:fontFamily="@font/kavoon"
                android:includeFontPadding="false"
                android:text="100"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>