<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.play_screen.PlayFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        android:orientation="horizontal"
        android:gravity="center|start"
        android:paddingHorizontal="@dimen/_8sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tooltipText="@string/mode_timer"
            android:src="@drawable/ic_hint"/>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/pb_star"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:progress="45"
            android:max="100"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:trackColor="@color/teal_700"
            app:indicatorColor="@color/teal_200"
            app:trackThickness="@dimen/_6sdp"
            app:trackCornerRadius="@dimen/_10sdp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_pause"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cards"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:listitem="@layout/layout_item_card"
            android:paddingTop="@dimen/_4sdp"
            android:paddingLeft="@dimen/_4sdp"

            android:clipToPadding="false"/>
    </LinearLayout>

</LinearLayout>