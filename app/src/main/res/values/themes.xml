<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IMasterMatcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OTPTextResendStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_otp_state</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/edt_regis_state_color</item>
    </style>

    <style name="OTPEditTextLayoutStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edt_otp_state</item>
    </style>

    <style name="TypeAnswerEditTextLayoutStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_state</item>
    </style>

    <style name="LoginButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/btn_bg_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CompetitiveStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/btn_bg_competitive_state</item>
    </style>
</resources>